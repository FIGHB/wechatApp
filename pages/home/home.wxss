/* pages/index/index.wxss */
@import "/css/base/base.wxss";

.card_container {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
  row-gap: 30rpx;
  /* background-color: beige; */
  margin-top: 30rpx;
}

.card {
  display: flex;
  width: 320rpx;
  height: 160rpx;
  background-color: #7AA1A8;
  box-shadow: 1px 1px 2px var(--box-shadow-color),1px 1px 2px var(--box-shadow-color),1px 1px 2px var(--box-shadow-color);
  border-radius: 0.5rem;
  padding: 5rpx;
}

.card_left {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}
#card_left_image{
  width: 65%;
  height: 65%;
}
.card_right {
  width: 50%;
  height: 100%;
}
.card_right_up {
  width: 100%;
  height: 60%;
  display: flex;
  align-items: center;
}
#card_right_up_text {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
}
.card_right_down {
  display: flex;
  justify-content: flex-end;
  width: 100%;
  height: 40%;
}
#card_right_down_image {
  width: 30%;
  height: 100%;
}
.card_add {
    position: relative;
    overflow: hidden;
}
#card_add_device {
    margin: auto;
    width: 30%;
    height: 60%;
    transform:translateX(-1000px);
    filter:drop-shadow(var(--main-bg-color) 1000px 0);
}
